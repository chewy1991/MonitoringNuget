<UserControl x:Class = "MonitoringNuget.MonitoringControl.MonitoringControl"
             xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local = "clr-namespace:MonitoringNuget.MonitoringControl"
             xmlns:viewModel = "clr-namespace:MonitoringNuget.MonitoringControl.ViewModel"
             mc:Ignorable = "d"
             d:DesignHeight = "450"
             d:DesignWidth = "800">
    <UserControl.Resources>
        <viewModel:MonitoringViewModel x:Key = "Monitoringvm" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "398" />
            <ColumnDefinition Width = "5" />
            <ColumnDefinition Width = "80" />
            <ColumnDefinition MaxWidth = "398" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height = "30" />
            <RowDefinition Height = "30" />
            <RowDefinition MaxHeight = "200" />
            <RowDefinition MaxHeight = "200" />
            <RowDefinition Height = "25" />
        </Grid.RowDefinitions>
        <Rectangle Fill = "Black"
                   Grid.Column = "1"
                   Grid.RowSpan = "6" />

        <!-- Monitoring -->
        <Label Grid.Column = "0"
               Grid.Row = "0"
               HorizontalAlignment = "Center"
               VerticalAlignment = "Top"
               FontSize = "12"
               Content = "Logmessage Monitor" />

        <DataGrid x:Name = "txtBox"
                  ItemsSource = "{Binding Source={StaticResource Monitoringvm},Path=Logentries}"
                  SelectedIndex = "{Binding Source={StaticResource Monitoringvm},Path=SelectedIndex}"
                  Grid.Column = "0"
                  Grid.Row = "1"
                  Grid.RowSpan = "3"
                  Margin = "5"
                  CanUserAddRows = "False"
                  CanUserDeleteRows = "False"
                  CanUserSortColumns = "False"
                  CanUserReorderColumns = "False"
                  IsTextSearchEnabled = "False"
                  IsReadOnly = "True" />

        <StackPanel Orientation = "Horizontal"
                    Grid.Column = "0"
                    Grid.Row = "4"
                    HorizontalAlignment = "Center">
            <Button x:Name = "cmdLoad"
                    Width = "180"
                    Content = "Load"
                    Command = "{Binding Source={StaticResource Monitoringvm},Path=LoadCommand}" />
            <Button x:Name = "cmdConfirm"
                    Width = "180"
                    Content = "Confirm"
                    Command = "{Binding Source={StaticResource Monitoringvm},Path=LogClearCommand}" />

        </StackPanel>

        <!-- Logmessage hinzufügen -->
        <Label Grid.Column = "2"
               Grid.ColumnSpan = "2"
               Grid.Row = "0"
               HorizontalAlignment = "Center"
               VerticalAlignment = "Top"
               FontSize = "12"
               Content = "Logmessage hinzufügen" />

        <Label Grid.Column = "2"
               Grid.Row = "1"
               HorizontalAlignment = "Right"
               VerticalAlignment = "Top"
               FontSize = "12"
               Content = "Log-Nachricht:" />
        <TextBox Grid.Column = "3"
                 Grid.Row = "1"
                 MaxLength = "45"
                 Margin = "2"
                 Text = "{Binding Source={StaticResource Monitoringvm}, Path=Message}" />

        <Label Grid.Column = "2"
               Grid.Row = "2"
               HorizontalAlignment = "Right"
               VerticalAlignment = "Top"
               FontSize = "12"
               Content = "Log-Level:" />

        <DataGrid Grid.Row = "2"
                  Grid.Column = "3"
                  Width = "135"
                  Height = "135"
                  HorizontalAlignment = "Left"
                  VerticalAlignment = "Top"
                  Margin = "5"
                  ItemsSource = "{Binding Source={StaticResource Monitoringvm}, Path=Severity}"
                  SelectedIndex = "{Binding Source={StaticResource Monitoringvm},Path=SelectedIndexSeverity}"
                  CanUserAddRows = "False"
                  CanUserDeleteRows = "False"
                  CanUserSortColumns = "False"
                  CanUserReorderColumns = "False"
                  IsTextSearchEnabled = "False"
                  IsReadOnly = "True" />

        <Label Grid.Column = "2"
               Grid.Row = "3"
               HorizontalAlignment = "Right"
               VerticalAlignment = "Top"
               FontSize = "12"
               Content = "Geräte:" />

        <DataGrid Grid.Row = "3"
                  Grid.Column = "3"
                  ItemsSource = "{Binding Source={StaticResource Monitoringvm},Path= Devices}"
                  SelectedIndex = "{Binding Source={StaticResource Monitoringvm},Path= SelectedindexDevices}"
                  Margin = "5"
                  CanUserAddRows = "False"
                  CanUserDeleteRows = "False"
                  CanUserSortColumns = "False"
                  CanUserReorderColumns = "False"
                  IsTextSearchEnabled = "False"
                  IsReadOnly = "True" />


        <Button x:Name = "cmdAdd"
                Width = "180"
                Content = "Add"
                Grid.Column = "3"
                Grid.Row = "4"
                HorizontalAlignment = "Center"
                Command = "{Binding Source={StaticResource Monitoringvm},Path=AddDataCommand}" />
    </Grid>
</UserControl>